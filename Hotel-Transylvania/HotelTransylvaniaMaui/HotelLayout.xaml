<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelTransylvaniaMaui.HotelLayout"
             Title="HotelLayout">
    <ScrollView>
        <VerticalStackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="600"/>
                    <RowDefinition Height="1000"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <ImageButton 
                Grid.Column="0"
                Source="zombiedoor.png"
                Clicked="OnZombieDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Column="1"
                Source="skeletondoor.png"
                Clicked="OnSkeletonDoorClicked"
                Scale="0.8">
                </ImageButton>
                
                <ImageButton 
                Grid.Column="2"
                Source="ghostdoor.png"
                Clicked="OnGhostDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Row="1"
                Source="vampiredoor.png"
                Clicked="OnVampireDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Row="1"
                Grid.Column="1"
                Source="trolldoor.png"
                Clicked="OnTrollDoorClicked"
                Scale="0.8">                    
                </ImageButton>
                
                <ImageButton 
                Grid.Row="1"
                Grid.Column="2"
                Source="mummydoor.png"
                Clicked="OnMummyDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Row="2"
                Source="witchdoor.png"
                Clicked="OnWitchDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Row="2"
                Grid.Column="1"
                Source="werewolfdoor.png"
                Clicked="OnWerewolfDoorClicked"
                Scale="0.8">                    
                </ImageButton>

                <ImageButton 
                Grid.Row="2"
                Grid.Column="2"
                Source="dragondoor.png"
                Clicked="OnDragonDoorClicked"
                Scale="0.8">
                </ImageButton>

                <ImageButton 
                Grid.Row="3"
                Grid.Column="1"
                Source="devildoor.png"
                Clicked="OnDevilDoorClicked"
                Scale="0.8">
                </ImageButton>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>