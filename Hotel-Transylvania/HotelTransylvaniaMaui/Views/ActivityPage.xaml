<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelTransylvaniaMaui.Views.ActivityPage"
             Title="Activity Page"
             BackgroundImageSource="chill.gif">
    <VerticalStackLayout>
        <Label
                IsVisible="false"
                x:Name="WeatherLabel"
                Grid.Row="0"
                Text="{Binding CurrentWeather}"
                FontFamily="Chiller"
                FontSize="91"
                TextColor="DarkRed"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        <Label 
                IsVisible="false"
                x:Name="NoWeatherLabel"
                Grid.Row="0"
                Text="VÃ¤dret kunde inte hittas :("
                FontFamily="Chiller"
                FontSize="91"
                TextColor="DarkRed"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        <Label
                HeightRequest="50"/>

        <Image 
            HorizontalOptions="Center"
            x:Name="ImagePool"
            Source=""
            WidthRequest="300"
            HeightRequest="300"
            />

    </VerticalStackLayout>
</ContentPage>